function (self, unitId, unitFrame, envTable, modTable)
    
    local Healers = envTable.Healers
    local Tanks = envTable.Tanks
    
    unitFrame.RoleTexture:Hide()
    
    local _, instanceType = GetInstanceInfo()
    if instanceType == 'pvp' or instanceType == 'arena' then
        local name, realm = UnitName(self.unit)
        realm = (realm and realm ~= '') and envTable.ShortenRealm(realm)
        if realm then name = name..'-'..realm end
        
        if Healers[name] then
            unitFrame.RoleTexture:Show()
            unitFrame.RoleTexture.texture = envTable.HealerTexture
        elseif Tanks[name] then
            unitFrame.RoleTexture:Show()
            unitFrame.RoleTexture.texture = envTable.TankTexture
        end
    end
    
    if modTable.config.debug then
        unitFrame.RoleTexture:Show()
        if math.random(2) == 1 then
            unitFrame.RoleTexture.texture = envTable.HealerTexture
        else
            unitFrame.RoleTexture.texture = envTable.TankTexture
        end
    end
    
end
