function (self, unitId, unitFrame, envTable, modTable)
    --insert code here
    local _, instanceType = GetInstanceInfo()
    local UnitIsUnit = UnitIsUnit
    if instanceType == 'pvp' or instanceType == 'arena' then
        local numOpps = GetNumArenaOpponentSpecs()
        if (numOpps and numOpps > 0) then
            for i = 1, numOpps do
                if (UnitIsUnit(unitId, 'arena'..i)) then
                    unitFrame.arenaLabel = unitFrame.arenaLabel or Plater:CreateLabel (unitFrame.healthBar.FrameOverlay, i, 14,'#FFD700')
                    unitFrame.arenaLabel:SetPoint ('center', 0, 0)
                    unitFrame.arenaLabel:Show()
                    break
                end
            end
        end
    end
end
